@using Student_Managemet_System.Models
@using Student_Managemet_System.ViewModel
@using Student_Managemet_System.ViewModel
@model StudentViewModel

<div class="container d-flex justify-content-center">
    <div class="card shadow p-4" style="min-width: 350px; max-width: 400px; width: 100%;">
        <h3 class="text-center mb-4">Login</h3>

        <form class="mt-3" method="post" asp-controller="Account" asp-action="Login">
            <div class="mb-3">
                <label class="form-label">Username</label>
                <input type="text" class="form-control" asp-for="Username" required placeholder="Enter username" />
            </div>

            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" class="form-control" asp-for="Password" required placeholder="Enter password" />
            </div>

            <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>
    </div>
</div>

